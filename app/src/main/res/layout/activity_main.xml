    android:layout_height="match_parent">

    <me.reinaertvandecruys.bachelorthesis.CustomJavaCameraView
        android:id="@+id/javaCameraView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <TextView
